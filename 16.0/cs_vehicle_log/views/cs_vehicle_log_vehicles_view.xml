<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="_view_cs_vehicle_log_vehicles_tree" model="ir.ui.view">
        <field name="name">cs_vehicle_log.vehicles.tree</field>
        <field name="model">cs_vehicle_log.vehicles</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="veh_make"/>
                <field name="veh_model"/>
                <field name="veh_capacity"/>
                <field name="active" invisible="true"/>
            </tree>
        </field>
    </record>

    <record id="view_cs_vehicle_log_vehicles_form" model="ir.ui.view">
        <field name="name">cs_vehicle_log.vehicles.form</field>
        <field name="model">cs_vehicle_log.vehicles</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" string="Registration" placeholder="ie: 1AB-2DE"/></h1>
                    </div>
                    <group>
                        <field name="veh_make"/>
                        <field name="veh_model"/>
                        <field name="veh_capacity"/>
                        <field name="veh_last_reading"/>
                        <field name="active" invisible="true"/>
                    </group>
                    <notebook>
                        <page string="Vehicle History" name="vehicle" >
                            <field name="vehicle_history_line_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_cs_vehicle_log_vehicles_search" model="ir.ui.view">
        <field name="name">cs_vehicle_log_vehicles.search</field>
        <field name="model">cs_vehicle_log.vehicles</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter name="active" string="Archived" domain="[('active', '=', False)]"/>
                <filter name="group_by_name" context="{'group_by': 'name'}"/>
            </search>
        </field>
    </record>


    <record id="action_cs_vehicle_log_vehicles" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cs_vehicle_log.vehicles</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">

            <p class="'o_view_nocontent_smiling_face">
                Add your vehicles!
            </p>
        </field>
    </record>

    <menuitem
            id="menu_cs_vehicle_log_vehicles"
            name="Vehicles"
            action="action_cs_vehicle_log_vehicles"
            parent="menu_cs_vehicle_log_root"
            sequence="20"/>
    <!--parent="menu_cs_vehicle_log_configuration_root"-->
</odoo>

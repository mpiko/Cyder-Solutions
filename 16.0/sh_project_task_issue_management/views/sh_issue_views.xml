<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_issue_view_form" model="ir.ui.view">
        <field name="name">sh.issue.view.form</field>
        <field name="model">sh.issue</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="sh_stage_id" widget="statusbar" options="{'clickable': '1', }" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Issue Title" required="1" />
                            <field name="sh_company_id" widget="selection" required="1" />
                            <field name="sh_partner_id" options="{'no_create':True, 'no_open':True}" />
                            <field name="sh_issue_type_id" widget="selection" required="1" />
                        </group>
                        <group>
                            <field name="sh_user_ids" required="1" widget="many2many_tags" options="{'no_create':True, 'no_open':True}" />
                            <field name="sh_project_id" required="1" options="{'no_create':True, 'no_open':True}" />
                            <field name="sh_task_id" options="{'no_create':True, 'no_open':True}" />
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="sh_description" />
                        </page>
                        <page name="additional_comment" string="Additional Comment">
                            <field name="sh_additional_comment" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="sh_issue_view_tree" model="ir.ui.view">
        <field name="name">sh.issue.view.tree</field>
        <field name="model">sh.issue</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="sh_company_id" />
                <field name="sh_partner_id" />
                <field name="sh_issue_type_id" />
                <field name="sh_user_ids" widget="many2many_tags" />
                <field name="sh_project_id" />
                <field name="sh_task_id" />
            </tree>
        </field>
    </record>

    <record id="sh_issue_action" model="ir.actions.act_window">
        <field name="name">Issues</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.issue</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sh_issue_menu" name="All Issues" action="sh_issue_action" parent="project.menu_main_pm" sequence="3" />

</odoo>

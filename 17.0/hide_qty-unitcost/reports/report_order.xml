<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//td[@name='td_quantity']" position="replace">
            <td name="td_quantity" class="text-end">
                <span t-if="line.hide == true"> </span>
                <span t-else="">
                    <span t-field="line.product_uom_qty"/>
                    <span t-field="line.product_uom"/>
                </span>
            </td>
        </xpath>
        <xpath expr="//td[@name='td_priceunit']" position="replace">
            <td name="td_priceunit" class="text-end">
                <span t-if="line.hide == true"> </span>
                <span t-else="">
                    <span t-field="line.price_unit"/>
                </span>
            </td>
        </xpath>

        <xpath expr="//td[@t-if='display_discount']" position="replace">
            <td t-if="display_discount" class="text-end" groups="product.group_discount_per_so_line">
                <span t-if="line.hide == true"> </span>
                <span t-else="">
                    <span t-field="line.discount"/>
                </span>
            </td>
        </xpath>
    </template>
</odoo>
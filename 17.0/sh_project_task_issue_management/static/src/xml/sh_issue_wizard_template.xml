<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    
    <t t-name="sh_create_issue">
        <form>
            <div class="row">
                <div class="col">
                    <label for="issueName">Issue
                                        Title</label>
                    <input type="text" class="form-control" id="issueName" placeholder="Title" required="true" />
                </div>
                <div class="col">
                    <label for="selectIssueType">Issue
                                        Type</label>
                    <select class="form-control form-field" id="selectIssueType" required="true">
                        <option>
                            <t t-foreach="data" t-as="issue_type" t-key="issue_type.id">
                                <option t-att-value="issue_type.id">
                                    <t t-esc="issue_type.name" />
                                </option>
                            </t>
                        </option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="selectDescription">Description</label>
                <textarea id="selectDescription" name="Descriprtion"></textarea>
            </div>
            <div class="form-group">
                <label for="selectEnvironment">Additional Comment</label>
                <textarea id="selectEnvironment" name="Additional Comment"></textarea>
            </div>
        </form>
    </t>

</templates>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_online_inherit" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//section[@id='details']//span[@t-field='line.product_uom_qty']" position="replace">
            <span t-if="line.hide == true"> </span>
            <span t-else="">
                <span t-field="line.product_uom_qty"/>
            </span>
        </xpath>

        <xpath expr="//section[@id='details']//span[@t-field='line.product_uom']" position="replace">
            <span t-if="line.hide == true"> </span>
            <span t-else="">
                <span t-field="line.product_uom"/>
            </span>
        </xpath>

        <xpath expr="//section[@id='details']//td[@t-attf-class][1]" position="replace">
            <span t-if="line.hide == true">
                    <td> </td>
            </span>
            <span t-else="">
                <td t-attf-class="text-end {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">
                    <div t-if="line.discount &gt;= 0" t-field="line.price_unit" t-att-style="line.discount and 'text-decoration: line-through' or None" t-att-class="(line.discount and 'text-danger' or '') + ' text-end'"/>
                    <div t-if="line.discount">
                        <t t-out="(1-line.discount / 100.0) * line.price_unit" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;decimal_precision&quot;: &quot;Product Price&quot;}"/>
                    </div>
                </td>
            </span>
        </xpath>

<!--        <xpath expr="//section[@id='details']//td[@t-if='display_discount']" position="replace">-->
<!--            <span t-if="line.hide == true"><td></td></span>-->
<!--            <span t-else="">-->
<!--                <td t-if="display_discount" t-attf-class="text-end {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">-->
<!--                    <strong t-if="line.discount &gt; 0" class="text-info">-->
<!--                        <t t-out="((line.discount % 1) and '%s' or '%d') % line.discount"/>%-->
<!--                    </strong>-->
<!--                </td>-->
<!--            </span>-->
<!--        </xpath>-->
    </template>
</odoo>

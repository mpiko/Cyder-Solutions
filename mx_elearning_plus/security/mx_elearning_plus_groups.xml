<?xml version="1.0" ?>
<odoo>
    <!-- Make a new category   -->
    <record model="ir.module.category" id="module_mx_elearning_plus_category">
        <field name="name">Mx_elearning_plus</field>
        <field name="description">Access to Mx_elearning_plus module</field>
        <field name="sequence">16</field>
    </record>

    <!-- Create a user group   -->
    <record id="group_mx_elearning_plus_user" model="res.groups">
        <field name="name">Mx_elearning_plus User</field>
        <field name="category_id" ref="mx_elearning_plus.module_mx_elearning_plus_category"/>
        <field name="users" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Create an admin group   -->
    <record id="group_mx_elearning_plus_manager" model="res.groups">
        <field name="name">Mx_elearning_plus Administrator</field>
        <field name="implied_ids" eval="[(4, ref('group_mx_elearning_plus_user'))]"/>
        <field name="category_id" ref="mx_elearning_plus.module_mx_elearning_plus_category"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="_view_mx_elearning_plus_category_tree" model="ir.ui.view">
        <field name="name">mx_elearning_plus.category.tree</field>
        <field name="model">mx_elearning_plus.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active" invisible="true"/>
            </tree>
        </field>
    </record>

    <record id="view_mx_elearning_plus_category_form" model="ir.ui.view">
        <field name="name">mx_elearning_plus.category.form</field>
        <field name="model">mx_elearning_plus.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" string="Name" placeholder="e.g.Monitors"/></h1>
                    </div>
                    <group>

                        <field name="active" invisible="true"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_mx_elearning_plus_category_search" model="ir.ui.view">
        <field name="name">mx_elearning_plus_category.search</field>
        <field name="model">mx_elearning_plus.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter name="active" string="Archived" domain="[('active', '=', False)]"/>
                <filter name="group_by_name" context="{'group_by': 'name'}"/>
            </search>
        </field>
    </record>


    <record id="action_mx_elearning_plus_category" model="ir.actions.act_window">
        <field name="name">Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mx_elearning_plus.category</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">

            <p class="'o_view_nocontent_smiling_face">
                Add your Category!
            </p>
        </field>
    </record>

    <menuitem
            id="menu_mx_elearning_plus_category"
            name="Mx_elearning_plus Category"
            action="action_mx_elearning_plus_category"
            parent="menu_mx_elearning_plus_configuration_root"
            sequence="10"/>
</odoo>

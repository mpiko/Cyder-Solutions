<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mx_elearning_plus_tree" model="ir.ui.view">
        <field name="name">mx_elearning_plus.mx_elearning_plus.tree</field>
        <field name="model">mx_elearning_plus.mx_elearning_plus</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref" readonly="1"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_mx_elearning_plus_form" model="ir.ui.view">
        <field name="name">mx_elearning_plus.mx_elearning_plus.form</field>
        <field name="model">mx_elearning_plus.mx_elearning_plus</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                          </group>
                        </group>

                    <notebook>
                        <page string="Page 1" name="page1">
                        </page>
                         <page string="Page 2" name="page2">
                         </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

       <record id="view_mx_elearning_plus_mx_elearning_plus_search" model="ir.ui.view">
        <field name="name">mx_elearning_plus.mx_elearning_plus.search</field>
        <field name="model">mx_elearning_plus.mx_elearning_plus</field>
        <field name="arch" type="xml">
            <search>
                <field name="ref"/>
                <field name="name"/>
                 <filter name="group_by_name" context="{'group_by': 'name'}"/>
            </search>
        </field>
    </record>

    <record id="action_mx_elearning_plus_mx_elearning_plus_view" model="ir.actions.act_window">
        <field name="name">Mx_elearning_plus</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mx_elearning_plus.mx_elearning_plus</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">

            <p class="'o_view_nocontent_smiling_face">
                Create your Mx_elearning_plus !
            </p>
        </field>
    </record>

    <menuitem
            id="menu_mx_elearning_plus_main"
            name="Mx_elearning_plus"
            action="action_mx_elearning_plus_mx_elearning_plus_view"
            parent="menu_mx_elearning_plus_root"
            sequence="10"/>
</odoo>

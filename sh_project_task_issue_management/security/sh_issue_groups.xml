<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_project_task_issue_category">
        <field name="name">Issue</field>
        <field name="description">Helps you manage your Issues</field>
        <field name="sequence">20</field>
    </record>

    <record id="issue_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        <field name="category_id" ref="module_project_task_issue_category" />
    </record>

    <record id="issue_group_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_project_task_issue_category" />
        <field name="implied_ids" eval="[(4,ref('issue_group_user'))]" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="sh_project_issue_type_config_setting_view" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='analytic']" position="after">
                <h2>Issue Type Configuration</h2>
                <div class="row mt16 o_settings_container" name="sh_timesheet_control">
                    <div class="col-12 col-lg-6 o_setting_box" id="sh_timesheet_off_validation_setting">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div>
                                    <div class="row mt16">
                                        <div class="w-100">
                                            <label string="Issue Type" for="sh_issue_type_config_id" class="col-2 col-lg-3" />
                                            <field name="sh_issue_type_config_id" class="oe_inline ml16" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>

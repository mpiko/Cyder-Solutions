<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_issue_wizard_view_form" model="ir.ui.view">
        <field name="name">sh.issue.wizard.view.form</field>
        <field name="model">sh.issue.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Issue Title" required="1" />
                            <field name="sh_company_id" widget="selection" required="1" />
                            <field name="sh_partner_id" options="{'no_create':True, 'no_open':True}" />
                            <field name="sh_issue_type_id" widget="selection" required="1" />
                        </group>
                        <group>
                            <field name="sh_user_ids" required="1" widget="many2many_tags"
                                options="{'no_create':True, 'no_open':True}" />
                            <field name="sh_project_id" required="1"
                                options="{'no_create':True, 'no_open':True}" />
                            <field name="sh_task_id" options="{'no_create':True, 'no_open':True}" />
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="sh_description" />
                        </page>
                        <page name="additional_comment" string="Additional Comment">
                            <field name="sh_additional_comment" />
                        </page>
                    </notebook>
                    <footer>
                        <button string="Create Issue" name="action_create_issue" type="object"
                            class="btn-primary" />
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_issue_wizard_action" model="ir.actions.act_window">
        <field name="name">Create Issue</field>
        <field name="res_model">sh.issue.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>